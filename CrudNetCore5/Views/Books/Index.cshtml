@model IEnumerable<CrudNetCore5.Models.Book>
@{
    ViewData["Title"] = "Lista de Libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if(TempData["message"] != null) {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Libros</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Books">Crear Nuevo Libro</a>
        </div>
    </div>

    <div class="row">
        @if(Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.id)</td>
                        <td>@Html.DisplayNameFor(m => m.title)</td>
                        <td>@Html.DisplayNameFor(m => m.description)</td>
                        <td>@Html.DisplayNameFor(m => m.releaseDate)</td>
                        <td>@Html.DisplayNameFor(m => m.author)</td>
                        <td>@Html.DisplayNameFor(m => m.price)</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.title</td>
                        <td>@item.description</td>
                        <td>@item.releaseDate</td>
                        <td>@item.author</td>
                        <td>@item.price</td>
                        <td>
                            <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Books" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>
</div>

